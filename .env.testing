# .env.testing - SQLite for fast testing
APP_NAME="FamLink"
APP_ENV=testing
APP_KEY=base64:test_key_replace_with_real_key
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=single
LOG_LEVEL=debug

# Database - SQLite for testing (fast and isolated)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Cache and Session - Array drivers for testing (fast)
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Mail - Use array driver for testing
MAIL_MAILER=array

# Disable external services during testing
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Faster bcrypt for testing
BCRYPT_ROUNDS=4