{
  "mcpServers": {
    "laravel-boost": {
      "command": "php",
      "args": [
        "artisan",
        "boost:mcp"
      ],
      "disabled": false,
      "autoApprove": [
        "database-schema",
        "list-routes",
        "read-log-entries",
        "application-info",
        "browser-logs",
        "database-query",
        "tinker"
      ]
    },
    "shadcn": {
      "command": "bunx",
      "args": [
        "shadcn@latest",
        "mcp"
      ],
      "disabled": false,
      "autoApprove": [
        "mcp_shadcn_get_project_registries",
        "mcp_shadcn_list_items_in_registries",
        "mcp_shadcn_search_items_in_registries"
      ]
    },
    "browsermcp": {
      "command": "npx",
      "args": [
        "@browsermcp/mcp@latest"
      ],
      "disabled": false,
      "autoApprove": [
        "browser_navigate",
        "browser_snapshot",
        "browser_get_console_logs"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "disabled": false,
      "autoApprove": []
    },
    "herd": {
      "command": "php",
      "args": [
        "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
      ],
      "env": {
        "SITE_PATH": "/Users/andreas/Herd/famlink"
      },
      "disabled": false,
      "autoApprove": [
        "get_site_information"
      ]
    }
  }